@page
@model FlowerShop.Pages.IndexModel

@{
    ViewData["Title"] = "Flower Shop Home";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="text-primary">Flower Shop Inventory</h1>
        <p class="text-muted">Click on a category to view its flowers</p>
    </div>

    @if (Model.Categories != null && Model.Categories.Any())
    {
        <div class="row justify-content-center">
            @foreach (var category in Model.Categories)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-end mb-2">
                                <a href="/ManageCategory/@category.Id" class="btn btn-sm btn-outline-secondary me-1">
                                    Edit
                                </a>
                                <a href="?handler=DeleteCategory&id=@category.Id"
                                   class="btn btn-sm btn-outline-danger ms-1"
                                   onclick="return confirm('Are you sure you want to delete @(category.Name)?')">
                                    Delete
                                </a>
                            </div>
                            <div class="text-center">
                                <h5 class="card-title">@category.Name</h5>
                                <p class="card-text text-muted">View all flowers in this category</p>
                                <a href="/Flowers?categoryId=@category.Id" class="btn btn-outline-primary">
                                    View Flowers
                                </a>
                            </div> 
                        </div>
                    </div>
                </div>

                <!-- Delete Modal -->

            }
        </div>

        <div class="text-center mb-4">
            <a href="/ManageCategory" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Category
            </a>
        </div>

        <div class="text-center mt-4">
            <a href="/Flowers" class="btn btn-primary">View All Flowers</a>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h5>No categories found</h5>
            <p>Start by adding some categories and flowers to your inventory.</p>
            <a href="/Flowers/Create" class="btn btn-primary">Add First Flower</a>
        </div>
    }
</div>