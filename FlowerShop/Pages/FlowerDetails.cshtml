@page
@model FlowerShop.Pages.FlowerDetailsModel
@{
    ViewData["Title"] = "Flower Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Flower Details</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-4 fw-bold">Name:</div>
                        <div class="col-8">@Model.Flower.Name</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-4 fw-bold">Category:</div>
                        <div class="col-8">@Model.CategoryName</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-4 fw-bold">Price:</div>
                        <div class="col-8">$@Model.Flower.Price.ToString("F2")</div>
                    </div>

                    <div class="mt-4 pt-3 border-top">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a href="/ManageFlower/@Model.Flower.Id" class="btn btn-primary me-md-2">
                                <i class="bi bi-pencil"></i> Edit Flower
                            </a>
                            <a href="?handler=DeleteFlower&id=@Model.Flower.Id"
                               class="btn btn-danger me-md-2"
                               onclick="return confirm('Are you sure you want to delete @(Model.Flower.Name)?')">
                                Delete Flower
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>